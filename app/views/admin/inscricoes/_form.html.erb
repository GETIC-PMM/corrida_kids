<% remote = false if remote == nil %>
<% id ||= Time.now.to_i %>

<%= form_with(model: [:admin, inscricao], data: { turbo: remote  }) do |form| %>
    <%= hidden_field_tag :remote, remote %>
    <!-- Note: Para adicionar campo obrigatório é só adicionar a classe '.label-required' no label. -->
    <div class="card-body">
        <div class="mb-3 ">
            <%= form.label :nome_crianca, class: "form-label"  %>
            <%= form.text_field :nome_crianca, class: "form-control" %>
        </div>
        <div class="mb-3 ">
            <%= form.label :data_nascimento_crianca, class: "form-label"  %>
            <%= form.text_field :data_nascimento_crianca, class: "form-control" %>
        </div>
        <div class="mb-3 ">
            <%= form.label :cpf_crianca, class: "form-label"  %>
            <%= form.text_field :cpf_crianca, class: "form-control" %>    
        </div>
        <div class="mb-3 ">
            <%= form.label :nome_responsavel, class: "form-label"  %>
            <%= form.text_field :nome_responsavel, class: "form-control" %>
        </div>
        <div class="mb-3 ">
            <%= form.label :cpf_responsavel, class: "form-label"  %>    
            <%= form.text_field :cpf_responsavel, class: "form-control" %>
        </div>
        <div class="mb-3 ">
            <%= form.label :telefone_contato, class: "form-label"  %>
            <%= form.text_field :telefone_contato, class: "form-control" %>
        </div>
    </div>
    
    <div class="card-footer d-flex justify-content-end">
       <%= render "admin/inscricoes/form_actions" %>

        <% unless remote %>
            <%= link_to "<i class='bi bi-arrow-left'></i> #{t("helpers.links.back")}".html_safe, admin_inscricoes_path, :class=> "d-inline-block btn btn-secondary me-2" %>
        <% end %>
    </div>
<% end %>









        